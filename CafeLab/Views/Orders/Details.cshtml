@model CafeLab.Models.Order

@{
    ViewData["Title"] = "Замовлення";
}

<h3 class="text-center">Замовлення</h3>

<style>
    form div {
        margin-bottom: 10px;
    }

    form, .main {
        align-content: center;
        display: flex;
        flex-direction: column;
        width: 20vw;
        margin: auto;
    }

    input {
        margin: auto;
    }
</style>

<div class="main">
    <h4>Замовлення</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderedAt)
        </dd>
    </dl>
</div>
<div style="margin: auto; display: flex; flex-direction: row; width: 20vw;">
    <a asp-action="Edit" asp-route-id="@Model.Id" style="margin: auto;" type="button" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" style="margin: auto;" type="button" class="btn btn-secondary">Назад до таблиці</a>
</div>
