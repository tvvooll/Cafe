@model IEnumerable<CafeLab.Models.Category>

@{
    ViewData["Title"] = "Меню";
}

<h1 class="text-center">Категорії</h1>

<p>
    <a type="button" class="btn btn-info" asp-action="Create">Додати  категорію</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Dishes)
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    <span class="badge bg-secondary">
                        @Html.DisplayFor(modelItem => item.Name)
                    </span>
                </td>
                <td class="text-center">
                    @foreach (var dish in item.Dishes.Take(3))
                    {
                        <span class="badge bg-info">
                            @dish.Name
                        </span>
                    }
                    @if (item.Dishes.Count() > 3)
                    {
                        <span class=" badge bg-primary">
                            І ще @(item.Dishes.Count() - 3)
                        </span>
                    }
                </td>
                <td>
                    <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                    <a type="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Детальніше</a> |
                    <a type="button" class="btn btn-secondary" asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
