@model CafeLab.Models.Dish

@{
    ViewData["Title"] = Model.Name;
}

<h3 class="text-center">@Model.Name</h3>

<style>
    form div {
        margin-bottom: 10px;
    }

    form, .main {
        align-content: center;
        display: flex;
        flex-direction: column;
        width: 20vw;
        margin: auto;
    }

    input {
        margin: auto;
    }
</style>
<div class="main">
    <hr />
    <dl class="col">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.PictureUrl)" width="200px" height="200px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)₴
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)г.
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div style="margin: auto; display: flex; flex-direction: row; width: 20vw;">
    <a asp-action="Edit" asp-route-id="@Model.Id" style="margin: auto;" type="button" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" style="margin: auto;" type="button" class="btn btn-secondary">Назад до таблиці</a>
</div>
